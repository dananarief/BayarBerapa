<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/backgrounds/scenic"
            tools:layout_editor_absoluteY="227dp"
            tools:layout_editor_absoluteX="141dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/number_picker"
            android:id="@+id/imageView"/>

    <com.shawnlin.numberpicker.NumberPicker
            android:id="@+id/number_picker"
            android:layout_width="64dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toTopOf="@id/button_choose_image"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="4dp"
            app:layout_constraintRight_toRightOf="parent"
            app:np_width="64dp"
            app:np_height="180dp"
            app:np_dividerColor="@color/colorPrimary"
            app:np_max="59"
            app:np_min="1"
            app:np_selectedTextColor="@color/colorPrimary"
            app:np_textColor="@color/colorPrimary"
            app:np_selectedTextSize="12dp"
            app:np_textSize="12dp"
            app:np_dividerDistance="24dp"
            app:np_wheelItemCount="3"
            app:np_wrapSelectorWheel="true"
            app:np_value="1" />
    <Button
            android:text="Choose Pict"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_width="300dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="24dp"
            android:id="@+id/button_choose_image"/>


</androidx.constraintlayout.widget.ConstraintLayout>