<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PreviewInfoActivity">

    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Keterangan"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="1. Subtotal: Label untuk harga total pembelian barang tanpa diskon dan pajak"
                    android:padding="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp" />

            <TextView
                    android:id="@+id/item_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="2. Purchase: Label untuk setiap item yang dibeli"
                    android:padding="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp" />

            <TextView
                    android:id="@+id/item_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="3. Discount: Promo atau potongan harga dari item yang dibeli"
                    android:padding="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp" />

            <TextView
                    android:id="@+id/item_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="4. Tax: Penambahan harga pajak untuk item yang dibeli"
                    android:padding="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp" />

            <TextView
                    android:id="@+id/item_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="5. Shared Fee: Biaya yang ditanggung bersama seperti biaya pengiriman"
                    android:padding="4dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>